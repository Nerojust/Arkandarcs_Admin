<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nerojust.arkandarcsadmin.views.DashBoardActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/nameTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/rubik_regular"
            android:gravity="center"
            android:textColor="@color/common_google_signin_btn_text_light_default"
            android:textSize="13sp"
            android:textStyle="bold"
            tools:text="Hi, Freddy zAmata" />

        <com.glide.slider.library.SliderLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.1">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/productCardview"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="0dp">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/arkandarcs_logo" />

                        <TextView
                            android:id="@+id/productTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="6dp"
                            android:layout_toRightOf="@id/img1"
                            android:fontFamily="@font/rubik_regular"
                            android:text="PRODUCTS"
                            android:textColor="@color/arkandarcs_black"
                            android:textSize="@dimen/_12ssp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/productTitle"
                            android:layout_alignStart="@id/productTitle"
                            android:layout_alignLeft="@id/productTitle"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="6dp"
                            android:layout_toLeftOf="@id/img2"
                            android:lineHeight="@dimen/_12ssp"
                            android:text="View, add, create, modify and delete products"
                            android:textSize="@dimen/_10ssp" />

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward_black_24dp"
                            android:tint="@color/colorPrimary" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/ordersCardview"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="13dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="10dp">

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/arkandarcs_logo" />

                        <TextView
                            android:id="@+id/orderTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="6dp"
                            android:layout_toRightOf="@id/img"
                            android:fontFamily="@font/rubik_regular"
                            android:text="ORDERS"
                            android:textColor="@color/arkandarcs_black"
                            android:textSize="@dimen/_12ssp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/orderTitle"
                            android:layout_alignStart="@id/orderTitle"
                            android:layout_alignLeft="@id/orderTitle"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="6dp"
                            android:layout_toLeftOf="@id/img3"
                            android:lineHeight="@dimen/_12ssp"
                            android:text="Manage orders and their status"
                            android:textSize="@dimen/_10ssp" />

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward_black_24dp"
                            android:tint="@color/colorPrimary" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/transactionCardview"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="13dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="10dp">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/arkandarcs_logo" />

                        <TextView
                            android:id="@+id/transactionTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="6dp"
                            android:layout_toRightOf="@id/img4"
                            android:fontFamily="@font/rubik_regular"
                            android:text="TRANSACTIONS"
                            android:textColor="@color/arkandarcs_black"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/transactionTitle"
                            android:layout_alignStart="@id/transactionTitle"
                            android:layout_alignLeft="@id/transactionTitle"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="6dp"
                            android:layout_toLeftOf="@id/img5"
                            android:lineHeight="@dimen/_12ssp"
                            android:text="View and manage transactions recorded"
                            android:textSize="@dimen/_10ssp" />

                        <ImageView
                            android:id="@+id/img5"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward_black_24dp"
                            android:tint="@color/colorPrimary" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/usersCardview"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginBottom="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingHorizontal="10dp">

                        <ImageView
                            android:id="@+id/img6"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/arkandarcs_logo" />

                        <TextView
                            android:id="@+id/usersTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="6dp"
                            android:layout_toRightOf="@id/img6"
                            android:fontFamily="@font/rubik_regular"
                            android:text="ADMIN USERS"
                            android:textColor="@color/arkandarcs_black"
                            android:textSize="@dimen/_12ssp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/usersTitle"
                            android:layout_alignStart="@id/usersTitle"
                            android:layout_alignLeft="@id/usersTitle"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="6dp"
                            android:layout_toLeftOf="@id/img7"
                            android:lineHeight="@dimen/_12ssp"
                            android:text="View and manage all registered admin users"
                            android:textSize="@dimen/_10ssp" />

                        <ImageView
                            android:id="@+id/img7"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_arrow_forward_black_24dp"
                            android:tint="@color/colorPrimary" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>
