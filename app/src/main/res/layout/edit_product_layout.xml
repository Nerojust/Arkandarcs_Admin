<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/productName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter name of product"
                android:inputType="text"
                app:met_iconLeft="@drawable/ic_launcher_background"
                app:met_iconPadding="0dp"
                app:met_textColorHint="@color/colorPrimaryDark" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/productCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter category"
                android:inputType="text"
                app:met_iconLeft="@drawable/ic_launcher_foreground"
                app:met_iconPadding="0dp"
                app:met_textColorHint="@color/colorPrimaryDark" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/productColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter color"
                android:inputType="text"
                app:met_iconLeft="@drawable/ic_launcher_foreground"
                app:met_iconPadding="0dp"
                app:met_textColorHint="@color/colorPrimaryDark" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/productAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Amount"
                android:inputType="text"
                app:met_iconLeft="@drawable/ic_launcher_foreground"
                app:met_iconPadding="0dp"
                app:met_textColorHint="@color/colorPrimaryDark" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/numberInStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter quantity"
                android:inputType="text"
                app:met_iconLeft="@drawable/ic_launcher_foreground"
                app:met_iconPadding="0dp"
                app:met_textColorHint="@color/colorPrimaryDark" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/productDiscountedAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter promo amount"
                android:inputType="text"
                app:met_iconLeft="@drawable/ic_launcher_foreground"
                app:met_iconPadding="0dp"
                app:met_textColorHint="@color/colorPrimaryDark" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/productDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:gravity="top"
                android:hint="Enter description"
                android:inputType="textMultiLine"
                android:singleLine="false"
                app:met_iconLeft="@drawable/ic_launcher_foreground"
                app:met_iconPadding="0dp"
                app:met_textColorHint="@color/colorPrimaryDark" />

        </LinearLayout>

    </ScrollView>
</LinearLayout>