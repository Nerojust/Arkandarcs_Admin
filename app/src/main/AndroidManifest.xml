<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nerojust.arkandarcsadmin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".utils.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/arkandarcs_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/arkandarcs_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:ignore="GoogleAppIndexingWarning"
        tools:targetApi="m">
        <activity
            android:name=".views.orders.OrdersActivity"
            android:label="Orders"
            android:parentActivityName=".views.DashBoardActivity" />
        <activity
            android:name=".views.SplashScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.users.UsersActivity"
            android:parentActivityName=".views.products.ProductsActivity" />
        <activity
            android:name=".views.DashBoardActivity"
            android:label="Dashboard" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3223394163127231~3493954191" />

        <activity
            android:name=".views.products.ProductsActivity"
            android:label="Products"
            android:parentActivityName=".views.DashBoardActivity" />
        <activity
            android:name=".views.register.RegisterActivity"
            android:label="Register"
            android:parentActivityName=".views.login.LoginActivity" />
        <activity
            android:name=".views.products.ProductDetailsActivity"
            android:label="Product Details"
            android:parentActivityName=".views.products.ProductsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".views.login.LoginActivity"
            android:label="Sign in"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".views.products.AddProductActivity"
            android:parentActivityName=".views.products.ProductsActivity"
            android:label="Add Product" />
    </application>

</manifest>